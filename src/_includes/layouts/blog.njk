---
title: Blog Post
layout: layouts/interior.njk
css: blog.css
---

<div class="body">
    <div class="slideshow">
        {%- for src in thumbnail -%}
            <div class="slideshow-slide">
                <img src="{{ src }}" class="slideshow-slide-img"/>
            </div>
        {%- endfor -%}
    </div>
    <div class="topper-left">
        Posted On: {{ date.toUTCString() }}
    </div>
    <h2>{{ title }}</h2>
    {{ content | safe }}
</div>
<script src="/scripts/slideshow.js"></script>